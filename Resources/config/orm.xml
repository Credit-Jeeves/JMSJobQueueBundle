<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
        >
    <entity name="JMS\JobQueueBundle\Entity\Job"
            repository-class="JMS\JobQueueBundle\Entity\Repository\JobRepository"
            table="jms_jobs">
        <indexes>
            <index name="job_runner" columns="executeAfter,state"/>
            <index columns="command"/>
        </indexes>
        <change-tracking-policy>DEFERRED_EXPLICIT</change-tracking-policy>
        <id name="id" type="bigint" column="id">
            <generator strategy="AUTO" />
            <options>
                <option name="unsigned"/>
            </options>
        </id>
    </entity>
</doctrine-mapping>

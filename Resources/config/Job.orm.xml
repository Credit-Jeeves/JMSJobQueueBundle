<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <mapped-superclass name="JMS\JobQueueBundle\Entity\Job">

        <field name="state" column="state" type="string" />

        <field name="createdAt" column="createdAt" type="datetime" nullable="true" />

        <field name="startedAt" column="startedAt" type="datetime" nullable="true" />

        <field name="checkedAt" column="checkedAt" type="datetime" nullable="true" />

        <field name="closedAt" column="closedAt" type="datetime" nullable="true" />

        <field name="command" column="command" type="string" />

        <field name="args" column="args" type="json_array" />

        <many-to-many field="dependencies" target-entity="Job">
            <join-table name="jms_job_dependencies">
                <join-columns>
                    <join-column name="source_job_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="dest_job_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <field name="output" column="output" type="text" nullable="true" />

        <field name="errorOutput" column="errorOutput" type="text" nullable="true" />

        <field name="exitCode" column="exitCode" type="smallint" nullable="true">
            <options>
                <option name="unsigned"/>
            </options>
        </field>

        <field name="maxRuntime" column="maxRuntime" type="smallint">
            <options>
                <option name="unsigned"/>
            </options>
        </field>

        <field name="maxRetries" column="maxRetries" type="smallint">
            <options>
                <option name="unsigned"/>
            </options>
        </field>

        <many-to-one field="originalJob" target-entity="Job" inversed-by="retryJobs">
            <join-column name="originalJob_id" referenced-column-name="id" />
        </many-to-one>

        <one-to-many field="retryJobs" target-entity="Job" mapped-by="originalJob">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
                <cascade-detach/>
            </cascade>
        </one-to-many>

        <field name="stackTrace" column="stackTrace" type="jms_job_safe_object" nullable="true" />

        <field name="runtime" column="runtime" type="smallint" nullable="true" >
            <options>
                <option name="unsigned"/>
            </options>
        </field>

        <field name="memoryUsage" column="memoryUsage" type="integer" nullable="true" >
            <options>
                <option name="unsigned"/>
            </options>
        </field>

        <field name="memoryUsageReal" column="memoryUsageReal" type="integer" nullable="true" >
            <options>
                <option name="unsigned"/>
            </options>
        </field>
    </mapped-superclass>
</doctrine-mapping>
